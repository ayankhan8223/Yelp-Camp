<% layout('/layouts/boilerplate') %>


    <div class="container d-flex justify-content-center align-items-center mt-3 mb-3 " >
        <div class="row" style="margin-bottom: 90px;">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 ">
                <div class="card shadow" style="padding: 30px; width: 450x; border-radius: 15px;">
                    <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80" alt="" class="card-img-top" style="  border-radius: 18px; box-shadow: rgba(255, 255, 255, 0.1) 0px 1px 1px 0px inset, rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;"/>
                    <div class="card-body " style="margin-top: 30px;">
                        <h5 class="card-title" style=" font-family: Poppins, sans-serif; letter-spacing: 6px; text-align: center; ">LOGIN</h5>
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <div class="mb-3" style="margin-top: 30px;">
                                <label class="form-label" for="username" style="font-family: Poppins, sans-serif">Username</label>
                                <input class="form-control" type="text" id="username" name="username" style="border-radius: 20px; "  autofocus required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="mb-3" style="margin-top: 20px;">
                                <label class="form-label" for="password" style="font-family: Poppins, sans-serif">Password</label>
                                <input class="form-control" type="password" id="password" name="password" style="border-radius: 20px;" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button class="btn btn-success col-12" id="hov" style="border-radius: 20px;
                            margin-top: 15px;
                            
                            height: 50px; font-family: Poppins; letter-spacing:3px; ">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    


    


