<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">NEW CAMPGROUND</h1>
        <div class="col-6 offset-3">

            <form action="/campground" method="POST" novalidate class="validate-form" enctype="multipart/form-data">
                <div mb-3>
                    <label class="form-label" for="title">title</label>
                    <input class="form-control" type="text" name="title" id="title" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>

                </div>
                <div mb-3>
                    <label class="form-label" for="location">location</label>
                    <input class="form-control" type="text" name="location" id="location" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">select images</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="image" multiple required>
                </div>

                <!-- <div mb-3>
                    <label class="form-label" for="image">image</label>
                    <input class="form-control" type="text" name="image" id="image" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="price">price</label>
                    <div class="input-group ">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" id="price" aria-label="Amount (to the nearest dollar)" name="price" required>
                        <span class="input-group-text">.00</span>
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div mb-3>
                    <label class="form-label" for="description">description</label>
                    <textarea class="form-control" type="text" name="description" id="description" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>



                <div class="mt-4">
                    <button class="btn btn-success">add campground</button>
                </div>

            </form>

        </div>
    </div>